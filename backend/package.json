{
  "name": "ultra-portal-backend",
  "version": "1.0.0",
  "description": "Comprehensive Node.js/Express.js API server for Ultra Portal educational platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server-simple.ts",
